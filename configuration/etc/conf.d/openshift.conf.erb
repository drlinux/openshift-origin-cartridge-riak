ServerRoot "<%= ENV['OPENSHIFT_RIAK_DIR'] %>"
DocumentRoot "<%= "#{ENV['OPENSHIFT_REPO_DIR']}/riak" %>"
Listen <%= "#{ENV['OPENSHIFT_RIAK_IP']}:#{ENV['OPENSHIFT_RIAK_PORT']}" %>
User <%= ENV['OPENSHIFT_GEAR_UUID'] %>
Group <%= ENV['OPENSHIFT_GEAR_UUID'] %>
ErrorLog "<%= "|/usr/sbin/rotatelogs #{ENV['OPENSHIFT_RIAK_DIR']}/logs/error_log-%Y%m%d-%H%M%S-%Z 86400" %>"
CustomLog "<%= "|/usr/sbin/rotatelogs #{ENV['OPENSHIFT_RIAK_DIR']}/logs/access_log-%Y%m%d-%H%M%S-%Z 86400" %>" combined

<Directory "<%= "#{ENV['OPENSHIFT_REPO_DIR']}/riak" %>">
  AllowOverride All
</Directory>
